<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogs - Reverse OJ</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-red-100 font-sans leading-normal tracking-normal">
    <!-- Include Dashboard (Navbar) -->
    <%- include('./dashboard') %>
    <!-- Page Header -->
    <header class="bg-red-600 text-white p-16 text-center">
      <h1 class="text-5xl font-bold">Blog Posts</h1>
      <p class="mt-4 text-lg">Insights, tips, and tutorials from Reverse OJ</p>
    </header>

    <!-- Blog Posts List -->
    <main class="container mx-auto mt-10 p-4">
      <section class="bg-white shadow-md rounded-lg p-6">
        <% if (blogPosts && blogPosts.length > 0) { %> <%
        blogPosts.forEach(function(post) { %>
        <article class="mb-8 border-b border-gray-300 pb-4">
          <h2 class="text-3xl font-bold text-red-600 mb-2">
            <a href="/blogs/<%= post.id %>"><%= post.title %></a>
          </h2>
          <p class="text-gray-600 mb-2">
            By <%= post.created_by %> on <%= new
            Date(post.created_at).toLocaleString() %>
          </p>
          <p class="text-gray-700">
            <%= post.subtitle || 'No subtitle provided' %>
          </p>
        </article>
        <% }); %> <% } else { %>
        <p class="text-center text-gray-600">
          No blog posts available at the moment.
        </p>
        <% } %>
      </section>

      <!-- Link to Create a New Blog -->
      <section class="mt-10 text-center">
        <a
          href="/blogs/new"
          class="bg-red-600 text-white font-bold py-2 px-4 rounded hover:bg-red-700"
        >
          Post a New Blog
        </a>
      </section>
    </main>

    <!-- Include Footer -->
    <%- include('./footer') %>
  </body>
</html>
