<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contests</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100 text-gray-800">
    <%- include('./dashboard') %>
    <div class="container mx-auto py-10">
      <h1 class="text-3xl font-bold text-center mb-8">All Contests</h1>

      <% if (contests && contests.length > 0) { %>
      <ul class="space-y-4">
        <% contests.forEach(contest => { %>
        <li class="bg-white shadow-md rounded-lg p-6">
          <h2 class="text-2xl font-semibold text-blue-600">
            <a href="/contests/<%= contest.id %>" class="hover:underline"
              ><%= contest.name %></a
            >
          </h2>

          <% 
            // Get current time and convert start_time, end_time to Date objects
            const now = new Date();
            const startTime = new Date(contest.start_time);
            const endTime = new Date(contest.end_time);
            let status = 'Ended'; // Default to ended

            // Determine the status based on the current time
            if (now < startTime) {
              status = 'Upcoming'; // Contest hasn't started yet
            } else if (now >= startTime && now <= endTime) {
              status = 'Ongoing'; // Contest is currently running
            }
          %>

          <p class="text-sm text-gray-500 mt-2">
            <strong>Status:</strong> <%= status %>
          </p>
          <p class="text-sm text-gray-500">
            <strong>Start Time:</strong> <%= contest.start_time %>
          </p>
          <p class="text-sm text-gray-500">
            <strong>End Time:</strong> <%= contest.end_time %>
          </p>

          <!-- Registration Button -->
          <% if (status !== 'Ongoing' && status !== 'Ended') { %>
            <% if (registeredContests.includes(contest.id)) { %>
            <button
              class="bg-gray-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-4 cursor-not-allowed"
              disabled
            >
              Registered
            </button>
            <% } else { %>
            <form action="/contests/register" method="POST" class="mt-4">
              <input type="hidden" name="contestId" value="<%= contest.id %>" />
              <button
                type="submit"
                class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
              >
                Register
              </button>
            </form>
            <% } %>
          <% } %>
        </li>
        <% }); %>
      </ul>
      <% } else { %>
      <p class="text-center text-gray-500 mt-8">No contests available.</p>
      <% } %>
    </div>
  </body>
</html>
