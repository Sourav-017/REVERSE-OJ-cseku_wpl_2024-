<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contest Standings - <%= contest.name %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div class="container mx-auto p-6">
      <h1 class="text-3xl font-bold mb-4">Standings <%= contest.name %></h1>

      <div class="overflow-x-auto">
        <table
          class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md"
        >
          <thead>
            <tr class="bg-gray-100 text-gray-600">
              <th class="px-6 py-3 text-left text-sm font-medium">User</th>
              <th class="px-6 py-3 text-left text-sm font-medium">
                Problems Solved
              </th>
            </tr>
          </thead>
          <tbody>
            <% standings.forEach(function(standing) { %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-3 text-sm font-medium">
                <%= standing.user_name %>
              </td>
              <td class="px-6 py-3 text-sm font-medium">
                <%= standing.unique_problems_solved %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
