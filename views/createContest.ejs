<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create New Contest</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div class="container mx-auto p-6">
      <h1 class="text-3xl font-bold mb-6">Create New Contest</h1>
      <form
        action="/admin/contests/new"
        method="POST"
        class="bg-white p-4 rounded-lg shadow-md mb-8"
      >
        <div class="mb-4">
          <label
            for="contest_name"
            class="block text-sm font-medium text-gray-700"
            >Contest Name</label
          >
          <input
            type="text"
            id="contest_name"
            name="contest_name"
            required
            class="w-full px-3 py-2 border rounded-lg"
            placeholder="Enter contest name"
          />
        </div>

        <div class="mb-4">
          <label for="status" class="block text-sm font-medium text-gray-700"
            >Contest Status</label
          >
          <select
            id="status"
            name="status"
            class="w-full px-3 py-2 border rounded-lg"
            required
          >
            <option value="active">Active</option>
            <option value="upcoming">Upcoming</option>
            <option value="ended">Ended</option>
          </select>
        </div>

        <div class="mb-4">
          <label
            for="start_time"
            class="block text-sm font-medium text-gray-700"
            >Start Time</label
          >
          <input
            type="datetime-local"
            id="start_time"
            name="start_time"
            required
            class="w-full px-3 py-2 border rounded-lg"
          />
        </div>

        <div class="mb-4">
          <label for="end_time" class="block text-sm font-medium text-gray-700"
            >End Time</label
          >
          <input
            type="datetime-local"
            id="end_time"
            name="end_time"
            required
            class="w-full px-3 py-2 border rounded-lg"
          />
        </div>

        <div class="mb-4">
          <label for="problems" class="block text-sm font-medium text-gray-700"
            >Select Problems</label
          >
          <select
            id="problems"
            name="problems[]"
            multiple
            class="w-full px-3 py-2 border rounded-lg"
          >
            <% problems.forEach(function(problem) { %>
            <option value="<%= problem.id %>"><%= problem.name %></option>
            <% }) %>
          </select>
        </div>

        <button
          type="submit"
          class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
        >
          Create Contest
        </button>
      </form>
    </div>
  </body>
</html>
