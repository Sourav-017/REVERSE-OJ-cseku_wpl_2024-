<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reverse OJ - Online Judge</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-red-100 font-sans leading-normal tracking-normal">
    <!-- Include Dashboard (Navbar) -->
    <%- include('./dashboard') %>

    <!-- Hero Section -->
    <header class="bg-red-600 text-white p-16 text-center">
      <h1 class="text-5xl font-bold">Welcome to Reverse OJ</h1>
      <p class="mt-4 text-lg">
        Join programming contests, solve problems, and improve your coding
        skills.
      </p>
    </header>

    <main class="container mx-auto mt-10 p-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- contest section-->
        <section>
          <h2 class="text-2xl font-bold mb-4">Upcoming Contests</h2>
          <div class="bg-white shadow-md rounded-lg p-6">
            <ul>
              <li class="border-b py-3">
                <a href="/contests/1" class="text-red-600 hover:underline"
                  >Contest #1: Beginners Challenge</a
                >
                <span class="text-gray-600 block"
                  >Starts: October 20, 2024 - 10:00 AM UTC</span
                >
              </li>
              <li class="border-b py-3">
                <a href="/contests/2" class="text-red-600 hover:underline"
                  >Contest #2: Advanced Algorithms</a
                >
                <span class="text-gray-600 block"
                  >Starts: November 5, 2024 - 2:00 PM UTC</span
                >
              </li>
            </ul>
            <a href="/contests" class="block text-red-600 mt-4 hover:underline"
              >View All Contests</a
            >
          </div>
        </section>

        <!--  Blog -->
        <section>
          <h2 class="text-2xl font-bold mb-4">Latest Blogs</h2>
          <div class="bg-white shadow-md rounded-lg p-6">
            <ul>
              <li class="border-b py-3">
                <a href="/blogs/1" class="text-red-600 hover:underline"
                  >How to Solve Dynamic Programming Problems</a
                >
                <span class="text-gray-600 block"
                  >Posted: October 12, 2024</span
                >
              </li>
              <li class="border-b py-3">
                <a href="/blogs/2" class="text-red-600 hover:underline"
                  >Tips for Competitive Programming Beginners</a
                >
                <span class="text-gray-600 block"
                  >Posted: October 10, 2024</span
                >
              </li>
            </ul>
            <a href="/blogs" class="block text-red-600 mt-4 hover:underline"
              >View All Blogs</a
            >
          </div>
        </section>
      </div>
    </main>

    <!-- Include Footer -->
    <%- include('./footer') %>
  </body>
</html>
