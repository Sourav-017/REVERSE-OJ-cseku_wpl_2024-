<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reverse OJ - Online Judge</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-red-100 font-sans leading-normal tracking-normal flex flex-col min-h-screen"
  >
    <%- include('./dashboard') %>

    <!-- Hero Section -->
    <header class="bg-red-600 text-white p-16 text-center">
      <h1 class="text-5xl font-bold">Welcome to Reverse OJ</h1>
      <p class="mt-4 text-lg">
        Join programming contests, solve problems, and improve your coding
        skills.
      </p>
    </header>

    <main class="container mx-auto mt-10 p-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Card 1 -->
        <div class="bg-white shadow-lg rounded-lg p-6 text-center">
          <img
            src="/images/mlogo.png"
            alt="Solve Problems"
            class="h-16 mx-auto mb-4"
          />
          <h2 class="text-xl font-bold text-gray-800">Solve Problems</h2>
          <p class="text-gray-600 mt-2">Solve algorithmic challenges.</p>
        </div>
        <!-- Card 2 -->
        <div class="bg-white shadow-lg rounded-lg p-6 text-center">
          <img
            src="/images/mlogo.png"
            alt="Host Contests"
            class="h-16 mx-auto mb-4"
          />
          <h2 class="text-xl font-bold text-gray-800">Host Contests</h2>
          <p class="text-gray-600 mt-2">
            Participate in contests arranged by ReverseOj And host contests
            without any fee(*) on ReverseOJ.
          </p>
        </div>
        <!-- Card 3 -->
        <div class="bg-white shadow-lg rounded-lg p-6 text-center">
          <img
            src="/images/mlogo.png"
            alt="Improve Skills"
            class="h-16 mx-auto mb-4"
          />
          <h2 class="text-xl font-bold text-gray-800">
            Become Better Programmer
          </h2>
          <p class="text-gray-600 mt-2">
            Learn new techniques to enhance your programming skills.
          </p>
        </div>
      </div>
    </main>

    <!-- Include Footer -->
    <%- include('./footer') %>
  </body>
</html>
