<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      /* Set the video as a background */
      .video-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1; /* Keeps the video behind content */
        animation: fadeIn 5s ease-in-out; /* Fade-in effect for the video */
      }

      /* Animation for fading in the video */
      @keyframes fadeIn {
        0% {
          opacity: 0;
        }
        100% {
          opacity: 1;
        }
      }

      /* Styling for the content on top of the video */
      .content {
        position: relative;
        z-index: 1;
        color: black; /* Ensures text is black over the video */
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <!-- Video background -->
    <video class="video-background" autoplay loop muted>
      <source src="./images/bg.mp4" type="video/mp4" />
      Your browser does not support the video tag.
    </video>

    <!-- Content goes here -->
    <div class="content container mx-auto mt-10 text-black">
      <h1 class="text-3xl font-bold mb-5">User List</h1>
      <table class="min-w-full bg-gray-800 border border-gray-200">
        <thead>
          <tr class="bg-black">
            <th class="py-2 px-4 border-b text-left text-white">Name</th>
            <th class="py-2 px-4 border-b text-left text-white">Email</th>
          </tr>
        </thead>
        <tbody>
          <% if (users.length > 0) { %> <% users.forEach(user => { %>
          <tr class="hover:bg-black">
            <td class="py-2 px-4 border-b text-white"><%= user.Name %></td>
            <td class="py-2 px-4 border-b text-white"><%= user.Email %></td>
          </tr>
          <% }); %> <% } else { %>
          <tr>
            <td colspan="2" class="py-2 px-4 border-b text-center text-white">
              No users found
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
